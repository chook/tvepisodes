    function create_msg(){
		//getFavorites();
        var msg = new _IG_MiniMessage(__MODULE_ID__, _gel("news_div"));
		var today = new Date();
		var year = today.getYear();
		var month = today.getMonth();
		var day = today.getDate();
		//alert (year+' '+month+' '+day);
		if (favoritesData != null){
			for (var i=0; i < favoritesData.getNumberOfRows(); i++){
				var nextAirDate = favoritesData.getValue(i,10);
				var name = favoritesData.getValue(i,1);
				var airDateArray = nextAirDate.split('-');
				//alert(airDateArray[0]+' '+airDateArray[1]+' '+airDateArray[2]);
				if (airDateArray[0] == year){
					if (airDateArray[1] == month){
						var leftDays = airDateArray[2] - day;
						if (leftDays == 0) 
							msg.createDismissibleMessage(name + " is on today!", dismissed);
						else{
							if (leftDays < 2)
								msg.createDismissibleMessage(name + " is on tomorrow!", dismissed);
							else
								if (leftDays < 4)
								msg.createDismissibleMessage(name + " is on in "+ leftDays+" days!", dismissed);
						}
					}
				}
			}		
		}		
    }
